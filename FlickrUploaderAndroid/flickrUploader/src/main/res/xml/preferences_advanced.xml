<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceScreen
        android:key="check_premium_status"
        android:title="Check PRO Status" />

    <ListPreference
        android:defaultValue="delay0s"
        android:dialogTitle="Auto-upload delay"
        android:entries="@array/autoupload_delay_entries"
        android:entryValues="@array/autoupload_delay_values"
        android:key="autoupload_delay"
        android:title="Auto-upload delay" />

    <PreferenceScreen
        android:key="upload_description"
        android:title="Upload description" />
    <PreferenceScreen
        android:key="custom_tags"
        android:title="Upload tag" />

    <CheckBoxPreference
        android:defaultValue="false"
        android:key="autodeletemedia"
        android:summaryOff="Device file auto-delete is deactivated"
        android:summaryOn="Device file auto-delete is activated"
        android:title="Delete 24h after upload" />

</PreferenceScreen>
