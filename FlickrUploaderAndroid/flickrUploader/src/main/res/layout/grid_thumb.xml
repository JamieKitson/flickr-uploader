<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="69dp"
    android:layout_height="69dp"
    android:padding="0.5dp" >

    <com.rafali.flickruploader.ui.widget.CustomImageView
        android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/midgray"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/uploading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/uploaded"
        android:visibility="gone"
        android:contentDescription="Upload-in-progress indicator"/>

    <ImageView
        android:id="@+id/check_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@color/transparentblack50"
        android:scaleType="centerInside"
        android:src="@drawable/checkbox_on"
        android:visibility="gone"
        android:contentDescription="Checkmark"/>

    <ImageView
        android:id="@+id/uploaded"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="3dp"
        android:layout_marginStart="3dp"
        android:src="@drawable/uploaded"
        android:visibility="gone"
        android:contentDescription="Already-uploaded indicator"/>

    <ImageView
        android:id="@+id/type"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="3dp"
        android:layout_marginEnd="3dp"
        android:src="@drawable/video_thumb_icon"
        android:visibility="gone"
        android:contentDescription="This-is-a-video indicator"/>

</RelativeLayout>
