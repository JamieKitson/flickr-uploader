<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rafali.flickruploader2"
    android:installLocation="internalOnly"
    android:versionCode="36"
    android:versionName="2.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <!-- Required permission to use Google Play Store donations -->
    <uses-permission android:name="com.android.vending.BILLING" />

    <permission
        android:name="com.rafali.flickruploader.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.rafali.flickruploader.permission.C2D_MESSAGE" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />

    <application
        android:name="com.rafali.flickruploader.FlickrUploader"
        android:allowBackup="false"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:logo="@drawable/icon_action_bar"
        android:theme="@style/CustomTheme" >
        <service android:name="com.rafali.flickruploader.UploadService" />

        <receiver android:name="com.rafali.flickruploader.MyBroadcastReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.rafali.intent.SHARE_PHOTO" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="com.rafali.flickruploader.AlarmBroadcastReceiver"
            android:process=":remote" >
        </receiver>

        <!-- - Google Play Store donations -->
        <service android:name="org.donations.google.BillingService" />

        <receiver android:name="org.donations.google.BillingReceiver" >
            <intent-filter>
                <action android:name="com.android.vending.billing.IN_APP_NOTIFY" />
                <action android:name="com.android.vending.billing.RESPONSE_CODE" />
                <action android:name="com.android.vending.billing.PURCHASE_STATE_CHANGED" />
            </intent-filter>
        </receiver>

        <activity
            android:name="com.rafali.flickruploader.FlickrUploaderActivity_"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEND" />

                <data android:mimeType="image/*" />
                <data android:mimeType="video/*" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEND_MULTIPLE" />

                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="image/*" />
                <data android:mimeType="video/*" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.rafali.flickruploader.Preferences"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:icon="@drawable/empty_shape"
            android:label="Preferences" >
            <intent-filter>
                <action android:name="android.intent.action.MANAGE_NETWORK_USAGE" >
                </action>

                <category android:name="android.intent.category.DEFAULT" >
                </category>
            </intent-filter>
        </activity>
        <activity
            android:name="com.rafali.flickruploader.PreferencesNotification"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="Notifications" />
        <activity
            android:name="com.rafali.flickruploader.PreferencesAdvanced"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="Advanced Preferences" />
        <activity
            android:name="com.rafali.flickruploader.WebAuth_"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:icon="@drawable/empty_shape"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.rafali.flickruploader.AutoUploadFoldersActivity_"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="Auto Upload Folders"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.google.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" />
    </application>

</manifest>