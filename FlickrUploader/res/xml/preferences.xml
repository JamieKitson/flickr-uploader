<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceScreen android:key="premium" />
    <PreferenceScreen android:key="login" />

    <CheckBoxPreference
        android:defaultValue="false"
        android:key="autoupload"
        android:summaryOff="Photos are manually uploaded"
        android:summaryOn="Photos are automatically uploaded"
        android:title="Photo Auto Upload" />
    <CheckBoxPreference
        android:defaultValue="false"
        android:key="autouploadvideos"
        android:summaryOff="Videos are manually uploaded"
        android:summaryOn="Videos are automatically uploaded"
        android:title="Video Auto Upload" />

    <PreferenceScreen
        android:key="autoupload_folder_settings"
        android:title="Auto Upload Folders" />

    <ListPreference
        android:defaultValue="wifior3G"
        android:dialogTitle="Upload when connected to"
        android:entries="@array/network_entries"
        android:entryValues="@array/network_values"
        android:key="upload_network"
        android:title="Upload when connected to" />

    <CheckBoxPreference
        android:defaultValue="false"
        android:key="charging_only"
        android:title="Only when charging" />

    <ListPreference
        android:dialogTitle="Upload privacy"
        android:key="upload_privacy"
        android:title="Upload privacy" />

    <PreferenceScreen
        android:key="notifications"
        android:title="Notifications" />
    <PreferenceScreen
        android:key="advancedPreferences"
        android:title="Advanced Preferences" />
    <PreferenceScreen
        android:key="rate"
        android:summary="If you like this app, please rate it ★★★★★ on Google Play"
        android:title="Rate the app" />
    <PreferenceScreen
        android:key="faq"
        android:summary="Answers to the most frequently asked questions"
        android:title="FAQ" />
    <PreferenceScreen
        android:key="feedback"
        android:summary="Something is not right? Need some help not found in the FAQ? Ideas for improvements?"
        android:title="Feedback / Help" />
    <PreferenceScreen
        android:key="github"
        android:summary="This app is opensource and the source can be found on github.com/rafali/flickr-uploader"
        android:title="Source code" />

</PreferenceScreen>