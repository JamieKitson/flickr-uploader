<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:rafali="http://schemas.android.com/apk/res/com.rafali.flickruploader"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.rafali.flickruploader.SlidingDrawer
        android:id="@+id/slidingDrawer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        rafali:content="@+id/drawer_content"
        rafali:handle="@+id/drawer_handle" >

        <com.rafali.flickruploader.DrawerHandleView_
            android:id="@+id/drawer_handle"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/transparentblack90"
            android:gravity="center_vertical" />

        <include layout="@layout/drawer_content" />
    </com.rafali.flickruploader.SlidingDrawer>

</RelativeLayout>